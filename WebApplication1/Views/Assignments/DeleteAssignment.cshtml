@model WebApplication1.Models.ViewModels.AssignmentViewModel

<h2>Are you sure you want to delete @Model.Title?</h2>
<div>
   @using (Html.BeginForm("DeleteAssignment", "Assignments", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
    @Html.AntiForgeryToken()
    
       <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-default" />
            @Html.ActionLink("Cancel", "ViewCourses", "Courses", null, new { @class = "btn btn-default" })
            </div>
    </div>
   }
</div>
